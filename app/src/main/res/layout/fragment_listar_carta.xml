<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.carta.ListarCartaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitutoCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAgregarCarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/design_button_green"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="AGREGAR A LA CARTA"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProducto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp" />
    </androidx.cardview.widget.CardView>

</FrameLayout>